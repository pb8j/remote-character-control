<?xml version="1.0"?>
<robot name="simple_robot">

    <!-- Base Link (Body) -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.15"/> <!-- Width, Depth, Height -->
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.15"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <!-- Head Link -->
    <link name="head_link">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Joint connecting base to head -->
    <joint name="base_to_head" type="fixed">
        <parent link="base_link"/>
        <child link="head_link"/>
        <origin xyz="0 0 0.1"/> <!-- Position relative to parent link, offset above body -->
    </joint>

    <!-- Right Leg Link -->
    <link name="right_leg_link">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Joint connecting base to right leg -->
    <joint name="base_to_right_leg" type="fixed">
        <parent link="base_link"/>
        <child link="right_leg_link"/>
        <origin xyz="-0.03 0 -0.125"/> <!-- Offset relative to parent, below body -->
    </joint>

    <!-- Left Leg Link -->
    <link name="left_leg_link">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Joint connecting base to left leg -->
    <joint name="base_to_left_leg" type="fixed">
        <parent link="base_link"/>
        <child link="left_leg_link"/>
        <origin xyz="0.03 0 -0.125"/> <!-- Offset relative to parent, below body -->
    </joint>

</robot>
